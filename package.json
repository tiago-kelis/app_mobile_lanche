{
  "name": "meu-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev -w mobile",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
